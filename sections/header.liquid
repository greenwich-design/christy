{%- liquid
  for block in section.blocks
    if block.type == '@app'
      assign has_app_block = true
    endif
  endfor
-%}

<header id="header" class="w-full grid grid-cols-12 px-4 py-8 bg-white">
  <div id="logo" class="col-span-3">
    {%- if request.page_type == 'index' -%}
      <h1 class="header__heading">
    {%- endif -%}
    <a
      href="{{ routes.root_url }}"
      class="max-md:w-[88px] md:max-lg:w-[120px] block {% if request.page_type == 'collection' %} max-lg:order-[-1] {% endif %} "
    >
      <img
        class=""
        loading="eager"
        src="{{ 'christy-logo.svg' | asset_url }}"
        width="181"
        height="27"
        alt="{{ shop.name }}"
      >
    </a>
    {%- if request.page_type == 'index' -%}
      </h1>
    {%- endif -%}
  </div>
  <div id="menu" class="col-span-6">
    <ul class="menu flex w-full justify-between">
      {% for link in section.settings.menu.links %}
        <li class="menu-link">
          <a href="{{ link.url }}">{{ link.title }}</a>

          {% if link.links.size > 0 %}
            <ul class="menu dropdown-child hidden">
              {% for child_link in link.links %}
                <li class="menu-link">
                  <a href="{{ child_link.url }}">{{ child_link.title }}</a>

                  {% if child_link.links.size > 0 %}
                    <ul class="menu dropdown-grandchild">
                      {% for grandchild_link in child_link.links %}
                        <li class="menu-link">
                          <a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                        </li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
  <div id="icons" class="col-span-3">
    <div class="max-lg:hidden lg:max-w-[317px] flex-1">
      {% render 'header-search', input_id: 'search_desktop' %}
    </div>

    <div class="header__icons flex items-center space-x-7">
      {%- if shop.customer_accounts_enabled -%}
        <a
          href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
          class="max-lg:hidden"
        >
          {% if customer %}
            {% render 'icon-account-customer' %}
          {% else %}
            {% render 'icon-account' %}
          {% endif %}
          <span class="visually-hidden">
            {%- liquid
              if customer
                echo 'customer.account_fallback' | t
              else
                echo 'customer.log_in' | t
              endif
            -%}
          </span>
        </a>
      {%- endif -%}

      <button
        class="group/wlbtn relative flex items-center outline-none"
        button-wishlist-drawer-toggle
        button-wishlist-header
        aria-label="Open Wishlist"
      >
        <span class="block w-[16px] lg:w-[18px]">{% render 'icon-heart' %}</span>
        <span
          style="absolute"
          class="ml-2 hidden absolute left-full top-1/2 -translate-y-1/2"
          wishlist-count
        ></span>
      </button>

      <a href="{{ routes.cart_url }}" class="relative flex items-center outline-none" id="cart-icon-bubble">
        {%- liquid
          if cart != empty
            render 'icon-cart-notempty'
          else
            render 'icon-cart'
          endif
        -%}
        <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
        {%- if cart != empty -%}
          <div class="cart-count-bubble ml-2">
            {%- if cart.item_count < 100 -%}
              <span aria-hidden="true">{{ cart.item_count }}</span>
            {%- endif -%}
            <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
          </div>
        {%- endif -%}
      </a>
    </div>
  </div>
</header>

{% if section.settings.announcement != blank %}
  <style>
    :root {
      --header-height: calc(70px + 44px);
      --header-height-lg: calc(107px + 48px);
    }
  </style>
{% endif %}

<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Organization",
    "name": {{ shop.name | json }},
    {% if settings.logo %}
      "logo": {{ settings.logo | image_url: width: 500 | prepend: "https:" | json }},
    {% endif %}
    "sameAs": [
      {{ settings.social_twitter_link | json }},
      {{ settings.social_facebook_link | json }},
      {{ settings.social_pinterest_link | json }},
      {{ settings.social_instagram_link | json }},
      {{ settings.social_tiktok_link | json }},
      {{ settings.social_tumblr_link | json }},
      {{ settings.social_snapchat_link | json }},
      {{ settings.social_youtube_link | json }},
      {{ settings.social_vimeo_link | json }}
    ],
    "url": {{ request.origin | append: page.url | json }}
  }
</script>

{%- if request.page_type == 'index' -%}
  {% assign potential_action_target = request.origin | append: routes.search_url | append: '?q={search_term_string}' %}
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "name": {{ shop.name | json }},
      "potentialAction": {
        "@type": "SearchAction",
        "target": {{ potential_action_target | json }},
        "query-input": "required name=search_term_string"
      },
      "url": {{ request.origin | append: page.url | json }}
    }
  </script>
{%- endif -%}

{% schema %}
{
  "name": "Header",
  "tag": "section",
  "class": "section-header w-full",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "richtext",
      "id": "announcement",
      "label": "Announcement bar",
      "info": "If copy is entered, announcement will show"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Select Menu",
      "info": "This is the main menu of the site."
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}
